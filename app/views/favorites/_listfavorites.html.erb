<% @user.favorites.each do |favorite| %>
<div class="media">
  <div class="media-left">
<%= image_tag favorite.post.user.avatar_url(40) %>
</div>
<div class="media-body">
  <h4 class="media-heading">
    <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite.post) %>
    </h4>
    <small><%= pluralize(favorite.post.comments.count, 'Comment') %></small>
    <small><%= pluralize(favorite.post.points, 'Vote') %></small><br>
    </div>
  </div>
<% end %>
